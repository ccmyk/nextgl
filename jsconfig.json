{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/utils/*": ["./src/app/utils/*"],
      "@/gl/*": ["./src/app/gl/*"],
      "@/effects/*": ["./src/app/gl/effects/*"],
      "@/components/*": ["./src/app/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/startup/*": ["./src/lib/startup/*"],
      "@/animations/*": ["./src/lib/animations*"],
      "@/public/*": ["./public/*"],
      "@/shaders/*": ["./public/shaders/*"],
      "@/assets/*": ["./public/assets/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
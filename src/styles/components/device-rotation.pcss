/* Device Rotation Warning */
.rotatedev {
  z-index: 500;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: #000;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #fff;
  display: none;
}

/* Show on Touch Devices with Wide Aspect Ratios */
@media (min-aspect-ratio: 1/1) {
  .touch .rotatedev {
    display: flex;
  }
}
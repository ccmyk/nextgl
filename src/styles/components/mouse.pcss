/* src/styles/components/mouse.pcss */

.mouse {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 49;
  pointer-events: none;
}

.mouse_el {
  position: absolute;
  left: 2rem;
  top: -0.8rem;
  overflow: hidden;
}

/* Hover Text Animation */
.mouse_el .Awrite {
  white-space: nowrap;
}

/* Theme Variables */
.mouse_el .Awrite-w {
  --dark: #F8F6F2;
  --light: #000;
}
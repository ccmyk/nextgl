// src/styles/base.pcss

@import './variables.pcss';

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  font-size: 62.5%;
  background-color: var(--c-bg);
}

body {
  font-family: 'PP Neue Montreal', sans-serif;
  font-weight: 400;
  line-height: 1.4;
  color: var(--c-black);
  background-color: var(--c-white);
  overflow-x: hidden;
}

canvas {
  display: block;
}
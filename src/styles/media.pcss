// src/styles/media.pcss

@import './variables.pcss';

img,
video {
  display: block;
  max-width: 100%;
  height: auto;
}

.lazy-img,
.lazy-video {
  opacity: 0;
  transition: opacity 0.5s ease;
}

.lazy-img.loaded,
.lazy-video.loaded {
  opacity: 1;
}

.el {
  position: relative;
  cursor: pointer;
  overflow: hidden;
}

.el_md {
  position: absolute;
  inset: 0;
  z-index: 2;
}

.el_b {
  pointer-events: none;
  position: relative;
  z-index: 1;
}